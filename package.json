{
  "name": "bokeh",
  "version": "0.1.0",
  "description": "Professional screen recording and editing app built with Electron and Next.js",
  "author": "Bokeh Team",
  "private": true,
  "main": "electron/dist/main/index.js",
  "homepage": "http://./",
  "config": {
    "forge": "./forge.config.js"
  },
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "next build --webpack && npm run fix-paths",
    "build-only": "next build",
    "fix-paths": "node scripts/fix-production-paths.js",
    "start": "next start",
    "lint": "eslint .",
    "build:electron": "tsc -p electron/tsconfig.json",
    "electron": "npm run build:electron && NODE_OPTIONS='--max-old-space-size=2048' electron .",
    "electron-dev": "concurrently \"NODE_ENV=development npm run dev\" \"npm run build:electron && NODE_OPTIONS='--max-old-space-size=2048' node scripts/wait-for-next.js\"",
    "forge:start": "electron-forge start",
    "forge:package": "electron-forge package",
    "forge:make": "electron-forge make",
    "forge:publish": "electron-forge publish",
    "setup:whisper": "node scripts/setup-whisper.js",
    "build-electron": "npm run setup:whisper && npm run build && npm run build:electron && electron-builder",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern=src/__tests__ --testPathIgnorePattern=integration",
    "test:integration": "jest --testPathPattern=integration",
    "test:debug": "jest --no-cache --detectOpenHandles",
    "test:quality": "npm run test:coverage && node scripts/test-quality-gate.js",
    "rebuild": "node-gyp rebuild && npx electron-rebuild"
  },
  "dependencies": {
    "@babel/standalone": "^7.28.5",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@remotion/cli": "^4.0.397",
    "@remotion/media-utils": "^4.0.397",
    "@remotion/paths": "^4.0.397",
    "@remotion/player": "^4.0.397",
    "@remotion/renderer": "^4.0.397",
    "@remotion/shapes": "^4.0.397",
    "@remotion/transitions": "^4.0.397",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "color": "^5.0.3",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "framer-motion": "^11.15.0",
    "html-to-image": "^1.11.13",
    "immer": "^10.1.1",
    "konva": "^9.3.22",
    "lucide-react": "^0.468.0",
    "mp4box": "^2.1.1",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "p-limit": "^7.1.1",
    "pixi-filters": "^6.1.5",
    "pixi.js": "^8.14.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-konva": "^19.0.0-0",
    "remotion": "^4.0.397",
    "serve-static": "^2.2.0",
    "sonner": "^2.0.7",
    "styled-jsx": "^5.1.7",
    "systeminformation": "^5.27.14",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "uiohook-napi": "^1.5.4",
    "use-resize-observer": "^9.1.0",
    "webm-muxer": "^5.1.4",
    "zod": "^3.25.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "7.10.2",
    "@electron-forge/maker-deb": "7.10.2",
    "@electron-forge/maker-rpm": "7.10.2",
    "@electron-forge/maker-squirrel": "7.10.2",
    "@electron-forge/maker-zip": "7.10.2",
    "@electron-forge/plugin-webpack": "7.10.2",
    "@electron/rebuild": "4.0.2",
    "@next/swc-darwin-arm64": "16.1.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/babel__standalone": "^7.1.9",
    "@types/electron-packager": "^15.0.0",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@types/serve-static": "^1.15.8",
    "concurrently": "^9.1.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "electron": "39.2.7",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-config-next": "16.1.1",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.4.1",
    "node-loader": "^2.1.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "5.7.2",
    "wait-on": "^8.0.1",
    "webpack": "5.94.0",
    "webpack-cli": "5.1.4"
  },
  "overrides": {
    "@electron/rebuild": "4.0.2",
    "node-abi": "4.24.0"
  },
  "build": {
    "appId": "com.bokeh.app",
    "productName": "Bokeh",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/dist/**/*",
      "electron/preload.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin"
      },
      {
        "from": "resources/models",
        "to": "models"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "asarUnpack": [
      "node_modules/@remotion/compositor-*/**/*",
      "node_modules/@ffmpeg-installer/**/*"
    ],
    "mac": {
      "hardenedRuntime": false,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Bokeh needs access to your microphone to record audio with screen recordings.",
        "NSCameraUsageDescription": "Bokeh needs access to your camera for video recording features.",
        "NSScreenCaptureDescription": "Bokeh needs access to record your screen to create recordings.",
        "com.apple.security.device.audio-input": true,
        "com.apple.security.device.camera": true
      }
    }
  },
  "keywords": [],
  "license": "ISC",
  "gypfile": true
}